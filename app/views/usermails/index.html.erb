<p id="notice"><%= notice %></p>

<h1>Usermails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usermails.each do |usermail| %>
      <tr>
        <td><%= usermail.name %></td>
        <td><%= usermail.email %></td>
        <td><%= link_to 'Show', usermail %></td>
        <td><%= link_to 'Edit', edit_usermail_path(usermail) %></td>
        <td><%= link_to 'Destroy', usermail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Usermail', new_usermail_path %>
