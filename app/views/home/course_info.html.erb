<h1>Course info</h1>
<% @product.each do |product| %>
<div class="row" style=" margin-bottom: 5px; margin-left:5px;margin-right: 30px; padding-bottom: 30px;padding-left: 30px;padding-top: 20px; border-style:solid;border-color: silver">
            <!-- <div  class="col-sm-9"> -->
          <img src="<%=product.url_photo%>" style="float:left;width:200px;height:140px;margin-right:10px;">
                <h1><%= link_to product.name, "course_details?url=#{product.homepage}&id=#{product.id}&counter=#{product.counter}" %></h1>
            <!-- </div> -->
            <div  style="margin-bottom: 30px; margin-left: 30px">
                 <h3>by <%= product.instructors %>, <%= product.course_site %></h3>
                <div class="popup" onclick="myFunction(<%= product.id %>)" style="margin-left: 0px;"> <h3>Description:</h3>
                        <span class="popuptext" id=<%= product.id %>><%= product.summary %></span>
                </div>
            </div>
          <br>
          </div>

          <% end %>
